{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [ "airbnb", "plugin:prettier/recommended" ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
        "func-names": 0,
        "no-console": ["error", { "allow": ["warn", "error", "info"] }],
        "import/extensions": ["ignorePackages"]
    }
}
